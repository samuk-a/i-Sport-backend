{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "paths": {
    "@core/*": ["./src/core/*"],
    "@helper/*": ["./src/helper/*"],
    "@interface/*": ["./src/interface/*"],
  }
}
