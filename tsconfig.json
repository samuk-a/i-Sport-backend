{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@core/*": ["src/core/*"],
      "@helper/*": ["src/helper/*"],
      "@interface/*": ["src/interface/*"],
      "@lib/*": ["src/lib/*"],
      "@middleware/*": ["src/middleware/*"],
      "@model/*": ["src/model/*"]
    }
  },
}
